<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/leaderboard_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HIGH SCORES"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:layout_marginBottom="10dp" />

    <!-- Scores Card (Top half) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leaderboard_CARD_scores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.35"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1A000000"
        app:cardBackgroundColor="#F2FFFFFF">

        <FrameLayout
            android:id="@+id/main_FRAME_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layoutDirection="ltr"
            android:textDirection="ltr" />


    </com.google.android.material.card.MaterialCardView>

    <!-- Divider line -->
    <View
        android:id="@+id/leaderboard_DIV_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="12dp"
        android:alpha="0.35"
        android:background="@android:color/white" />

    <!-- Map Card (Bottom smaller area) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leaderboard_CARD_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1A000000"
        app:cardBackgroundColor="#F2FFFFFF">

        <FrameLayout
            android:id="@+id/main_FRAME_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaderboard_BTN_back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="14dp"
        android:text="Back to Menu"
        android:textStyle="bold"
        android:textSize="18sp"
        app:cornerRadius="18dp" />

</LinearLayout>
