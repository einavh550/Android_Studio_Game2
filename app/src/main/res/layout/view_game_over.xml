<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:clickable="true"
    android:focusable="true">

    <!-- The centered "dialog" card -->
    <LinearLayout
        android:id="@+id/gameOver_CARD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_game_over_card"
        android:orientation="vertical"
        android:padding="22dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.82">

        <TextView
            android:id="@+id/gameOver_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAME OVER"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#FF4D4D"
            android:letterSpacing="0.08" />

        <TextView
            android:id="@+id/gameOver_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE: 0"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#FFD966"
            android:layout_marginTop="14dp"
            android:letterSpacing="0.06" />

        <Button
            android:id="@+id/gameOver_BTN_restart"
            android:layout_width="220dp"
            android:layout_height="54dp"
            android:layout_marginTop="22dp"
            android:text="RESTART"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/bg_restart_btn"
            android:textColor="#111111" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
